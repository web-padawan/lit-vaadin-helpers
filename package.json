{
  "name": "lit-vaadin-helpers",
  "private": true,
  "description": "Prototyping helpers for using Vaadin components with lit-element",
  "author": "Serhii Kulykov <iamkulykov@gmail.com>",
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "dev": "npm run watch & npm run serve",
    "lint": "eslint src test --ext .ts --ignore-path .gitignore",
    "serve": "web-dev-server --node-resolve --app-index demo/index.html --open --port 8081",
    "test": "wtr test/*.test.ts",
    "watch": "tsc-watch"
  },
  "dependencies": {
    "lit": "^2.0.0-rc.1"
  },
  "devDependencies": {
    "@esm-bundle/chai": "^4.3.0",
    "@open-wc/testing-helpers": "^1.8.12",
    "@types/sinon": "^9.0.10",
    "@typescript-eslint/eslint-plugin": "^4.15.0",
    "@typescript-eslint/parser": "^4.15.0",
    "@vaadin/vaadin-button": "^2.4.0",
    "@vaadin/vaadin-combo-box": "^6.0.0",
    "@vaadin/vaadin-context-menu": "^5.0.0",
    "@vaadin/vaadin-date-picker": "^5.0.0",
    "@vaadin/vaadin-dialog": "^2.5.2",
    "@vaadin/vaadin-grid": "^6.0.0",
    "@vaadin/vaadin-item": "^3.0.0",
    "@vaadin/vaadin-list-box": "^2.0.0",
    "@vaadin/vaadin-notification": "^1.6.1",
    "@vaadin/vaadin-select": "^3.0.0",
    "@web/dev-server": "^0.1.7",
    "@web/dev-server-esbuild": "^0.2.11",
    "@web/test-runner": "^0.12.15",
    "eslint": "^7.19.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-prettier": "^3.3.1",
    "husky": "^4.3.6",
    "lint-staged": "^10.5.4",
    "prettier": "^2.2.1",
    "sinon": "^9.2.4",
    "tsc-watch": "^4.2.9",
    "typescript": "^4.1.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
