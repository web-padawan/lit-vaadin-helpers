{
  "name": "lit-vaadin-helpers",
  "private": true,
  "description": "Prototyping helpers for using Vaadin components with lit-element",
  "author": "Serhii Kulykov <iamkulykov@gmail.com>",
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "dev": "npm run watch & npm run serve",
    "lint": "eslint src test --ext .ts --ignore-path .gitignore",
    "serve": "web-dev-server --node-resolve --app-index demo/index.html --open --port 8081",
    "test": "wtr test/*.test.ts",
    "watch": "tsc-watch"
  },
  "dependencies": {
    "lit-element": "^3.0.0-pre.2",
    "lit-html": "^2.0.0-pre.5"
  },
  "devDependencies": {
    "@esm-bundle/chai": "^4.1.5",
    "@open-wc/testing-helpers": "^1.8.12",
    "@types/sinon": "^9.0.10",
    "@typescript-eslint/eslint-plugin": "^4.11.1",
    "@typescript-eslint/parser": "^4.11.1",
    "@vaadin/vaadin-button": "^2.4.0",
    "@vaadin/vaadin-combo-box": "^5.4.7",
    "@vaadin/vaadin-context-menu": "^4.5.0",
    "@vaadin/vaadin-date-picker": "^4.4.1",
    "@vaadin/vaadin-dialog": "^2.5.2",
    "@vaadin/vaadin-grid": "^5.7.7",
    "@vaadin/vaadin-item": "^2.3.0",
    "@vaadin/vaadin-list-box": "^1.4.0",
    "@vaadin/vaadin-notification": "^1.6.0",
    "@vaadin/vaadin-select": "^2.4.0",
    "@web/dev-server": "^0.1.3",
    "@web/dev-server-esbuild": "^0.2.10",
    "@web/test-runner": "^0.11.6",
    "eslint": "^7.16.0",
    "eslint-config-prettier": "^7.1.0",
    "eslint-plugin-prettier": "^3.3.0",
    "husky": "^4.3.6",
    "lint-staged": "^10.5.3",
    "prettier": "^2.2.1",
    "sinon": "^9.2.2",
    "tsc-watch": "^4.2.9",
    "typescript": "^4.1.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
