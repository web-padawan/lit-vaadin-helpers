{
  "name": "lit-vaadin-helpers",
  "private": true,
  "description": "Prototyping helpers for using Vaadin components with lit-element",
  "author": "Serhii Kulykov <iamkulykov@gmail.com>",
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "dev": "npm run watch & npm run serve",
    "lint": "eslint src test --ext .ts --ignore-path .gitignore",
    "serve": "web-dev-server --node-resolve --app-index demo/index.html --open --port 8081",
    "test": "wtr test/*.ts",
    "watch": "tsc-watch"
  },
  "dependencies": {
    "lit-element": "^3.0.0-pre.1",
    "lit-html": "^2.0.0-pre.3"
  },
  "devDependencies": {
    "@esm-bundle/chai": "^4.1.5",
    "@open-wc/testing-helpers": "^1.8.10",
    "@types/sinon": "^9.0.8",
    "@typescript-eslint/eslint-plugin": "^4.4.1",
    "@typescript-eslint/parser": "^4.4.1",
    "@vaadin/vaadin-grid": "^5.7.4",
    "@vaadin/vaadin-item": "^2.3.0",
    "@vaadin/vaadin-list-box": "^1.4.0",
    "@vaadin/vaadin-select": "^2.4.0",
    "@web/dev-server": "0.0.15",
    "@web/dev-server-esbuild": "0.2.6",
    "@web/test-runner": "0.9.4",
    "eslint": "^7.11.0",
    "eslint-config-prettier": "^6.13.0",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^4.3.0",
    "lint-staged": "^10.4.2",
    "prettier": "^2.1.2",
    "sinon": "^9.2.0",
    "tsc-watch": "^4.2.9",
    "typescript": "^4.0.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
