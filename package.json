{
  "name": "lit-vaadin-helpers",
  "version": "0.2.0",
  "description": "Helpers for using Vaadin web components with Lit 2",
  "author": "Serhii Kulykov <iamkulykov@gmail.com>",
  "license": "MIT",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "files": [
    "/dist/",
    "!/dist/demo/",
    "!/dist/test/"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "npm run watch & npm run serve",
    "lint": "eslint src --ext .ts --ignore-path .gitignore",
    "prepublishOnly": "npm run build",
    "serve": "web-dev-server --node-resolve --open --port 8081",
    "test": "wtr src/test/*.test.ts",
    "watch": "tsc-watch"
  },
  "dependencies": {
    "lit": "^2.0.0-rc.1"
  },
  "devDependencies": {
    "@esm-bundle/chai": "^4.3.4",
    "@open-wc/testing-helpers": "^2.0.0-next.0",
    "@types/sinon": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^4.23.0",
    "@typescript-eslint/parser": "^4.23.0",
    "@vaadin/vaadin-button": "^21.0.0",
    "@vaadin/vaadin-combo-box": "^21.0.0",
    "@vaadin/vaadin-context-menu": "^21.0.0",
    "@vaadin/vaadin-date-picker": "^21.0.0",
    "@vaadin/vaadin-dialog": "^21.0.0",
    "@vaadin/vaadin-grid": "^21.0.0",
    "@vaadin/vaadin-item": "^21.0.0",
    "@vaadin/vaadin-list-box": "^21.0.0",
    "@vaadin/vaadin-notification": "^21.0.0",
    "@vaadin/vaadin-select": "^21.0.0",
    "@web/dev-server": "^0.1.17",
    "@web/dev-server-esbuild": "^0.2.12",
    "@web/test-runner": "^0.13.4",
    "eslint": "^7.26.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "lint-staged": "^11.0.0",
    "prettier": "^2.3.0",
    "simple-git-hooks": "^2.5.1",
    "sinon": "^10.0.0",
    "tsc-watch": "^4.2.9",
    "typescript": "^4.2.4"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
