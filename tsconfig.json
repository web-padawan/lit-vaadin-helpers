{
  "compilerOptions": {
    "outDir": ".",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "inlineSources": true,
    "module": "esNext",
    "target": "es2017",
    "lib": ["esnext", "es2017", "dom"],
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "allowSyntheticDefaultImports": true,
    "noFallthroughCasesInSwitch": true,
    "strict": true,
    "experimentalDecorators": true,
    "importHelpers": true
  },
  "include": [
    "**/*.ts"
  ],
  "exclude": []
}
